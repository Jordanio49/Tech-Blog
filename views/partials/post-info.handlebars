<article class="post">
    <div class="title">
        <h2>{{title}}</h2>
        <h3>{{user.username}}</h3>
        <p>{{post_text}}</p>
        <span>{{format_date created_at}}</span>
    </div>
    <div class="'meta">
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>